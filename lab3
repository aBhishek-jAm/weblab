/* Universal settings */
* {
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
    background-color: aqua;
}

/* Tag-specific styles */
h2 {
    color: #333;
    text-align: center;
    text-decoration: underline;
}

h3 {
    color: #555;
    text-transform: uppercase;
}

hr {
    border-top: 5px greenyellow;
    margin: 20px 0;
}

div p {
    color:green;
    line-height: 2;
    text-align: center;

}

.span-highlight {
    background: yellow;
    font-weight: bold;
}

#time-now {
    color: blue;
    font-style: italic;
}

img, a {
    cursor: pointer;
    display: block;
    margin: 10px auto;
    border: 5px salmon solid;
